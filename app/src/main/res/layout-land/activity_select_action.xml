<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SelectActionActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:animationCache="false"
        android:background="#BD1010">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="50dp"
                android:text="@string/select_action"
                android:textAlignment="gravity"
                android:textColor="#FBC02D"
                android:textSize="35sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/trade"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="50dp"
                android:backgroundTint="#FFA000"
                android:onClick="trade"
                android:text="@string/trade"
                android:textColor="#A10101"
                android:textSize="30sp" />

            <Button
                android:id="@+id/bank"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="15dp"
                android:backgroundTint="#FFA000"
                android:onClick="bankChange"
                android:text="@string/bank"
                android:textColor="#A10101"
                android:textSize="30sp" />

            <Button
                android:id="@+id/port"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="15dp"
                android:backgroundTint="#FFA000"
                android:onClick="portChange"
                android:text="@string/port"
                android:textColor="#A10101"
                android:textSize="30sp" />

            <Button
                android:id="@+id/showCosts"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="15dp"
                android:backgroundTint="#FFA000"
                android:onClick="showCosts"
                android:text="@string/showCosts"
                android:textColor="#A10101"
                android:textSize="30sp" />

            <Button
                android:id="@+id/ahead"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center_horizontal"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="35dp"
                android:backgroundTint="#FFA000"
                android:onClick="ahead"
                android:text="@string/ahead"
                android:textColor="#A10101"
                android:textSize="30sp" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>