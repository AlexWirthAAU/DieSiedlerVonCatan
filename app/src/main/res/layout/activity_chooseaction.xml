<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#BD1010"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/chooseaction"
        android:layout_width="265dp"
        android:layout_height="50dp"
        android:gravity="center"
        android:text="Was möchtest du tun?"
        android:textColor="#FBC02D"
        android:textSize="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.077" />

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="414dp"
        android:layout_height="434dp"
        android:layout_marginTop="140dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/buildSettlement"
                android:layout_width="416dp"
                android:layout_height="75dp"
                android:backgroundTint="#A10101"
                android:gravity="center"
                android:text="Siedlung bauen"
                android:textColor="#FBC02D"
                android:textSize="18dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.498"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.206" />

            <Button
                android:id="@+id/buildRoad"
                android:layout_width="416dp"
                android:layout_height="75dp"
                android:backgroundTint="#A10101"
                android:gravity="center"
                android:text="Straße bauen"
                android:textColor="#FBC02D"
                android:textSize="18dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.343" />

            <Button
                android:id="@+id/buildCity"
                android:layout_width="416dp"
                android:layout_height="75dp"
                android:backgroundTint="#A10101"
                android:gravity="center"
                android:text="Stadt bauen"
                android:textColor="#FBC02D"
                android:textSize="18dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.474" />

            <Button
                android:id="@+id/exchange2"
                android:layout_width="416dp"
                android:layout_height="75dp"
                android:backgroundTint="#A10101"
                android:gravity="center"
                android:text="Tauschen"
                android:textColor="#FBC02D"
                android:textSize="18dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.851" />

            <Button
                android:id="@+id/trade"
                android:layout_width="416dp"
                android:layout_height="65dp"
                android:backgroundTint="#A10101"
                android:gravity="center"
                android:text="Handeln"
                android:textColor="#FBC02D"
                android:textSize="18dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.6" />

            <Button
                android:id="@+id/buyDevCard"
                android:layout_width="416dp"
                android:layout_height="65dp"
                android:backgroundTint="#A10101"
                android:gravity="center"
                android:text="Entwicklungskarte kaufen"
                android:textColor="#FBC02D"
                android:textSize="18dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.6" />

            <Button
                android:id="@+id/setDevCard"
                android:layout_width="416dp"
                android:layout_height="65dp"
                android:backgroundTint="#A10101"
                android:gravity="center"
                android:text="Entwicklungskarte ausspielen"
                android:textColor="#FBC02D"
                android:textSize="18dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.6" />


        </LinearLayout>

    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>