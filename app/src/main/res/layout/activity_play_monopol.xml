<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".cards.PlayMonopolOrInventionActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:animationCache="false"
        android:background="#BD1010">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="50dp"
                android:text="@string/res"
                android:textAlignment="gravity"
                android:textColor="#FBC02D"
                android:textSize="35sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/wood"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="50dp"
                android:backgroundTint="#FFA000"
                android:onClick="wood"
                android:text="@string/wood"
                android:textColor="#A10101"
                android:textSize="30sp" />

            <Button
                android:id="@+id/wool"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="15dp"
                android:backgroundTint="#FFA000"
                android:onClick="wool"
                android:text="@string/wool"
                android:textColor="#A10101"
                android:textSize="30sp" />

            <Button
                android:id="@+id/wheat"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="15dp"
                android:backgroundTint="#FFA000"
                android:onClick="wheat"
                android:text="@string/wheat"
                android:textColor="#A10101"
                android:textSize="30sp" />

            <Button
                android:id="@+id/ore"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="15dp"
                android:backgroundTint="#FFA000"
                android:onClick="ore"
                android:text="@string/ore"
                android:textColor="#A10101"
                android:textSize="30sp" />

            <Button
                android:id="@+id/clay"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="15dp"
                android:backgroundTint="#FFA000"
                android:onClick="clay"
                android:text="@string/clay"
                android:textColor="#A10101"
                android:textSize="30sp" />

            <Button
                android:id="@+id/start2"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="55dp"
                android:backgroundTint="#FFA000"
                android:onClick="start"
                android:text="@string/getRes"
                android:textColor="#A10101"
                android:textSize="30sp" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>