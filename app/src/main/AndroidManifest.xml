        <activity android:name=".RollDiceActivity" />
        <activity android:name=".trading.PortChangeActivity" />
        <activity android:name=".trading.BankChangeActivity" />
        <activity android:name=".trading.AnswerToTradeActivity" />
        <activity android:name=".trading.TradeActivity" />
        <activity android:name=".MainActivity" />
        <activity android:name=".ShowCostsActivity" />
        <activity android:name=".beforegame.WelcomeActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".beforegame.SearchPlayersActivity" />
        <activity android:name=".beforegame.SelectColorsActivity" />
        <activity android:name=".beforegame.LoginActivity" />
        <activity android:name=".building.BuildSettlementActivity" />
