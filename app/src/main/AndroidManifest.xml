        <activity
            android:name=".cards.PlayCardActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".RollDiceActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".trading.BankOrPortChangeActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".trading.AnswerToTradeActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".trading.TradeActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".MainActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ShowCostsActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".beforegame.WelcomeActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".beforegame.SearchPlayersActivity"
