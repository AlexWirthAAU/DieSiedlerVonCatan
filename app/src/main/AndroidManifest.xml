        android:screenOrientation="portrait"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".cheating.CheatSelectResourceActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".cheating.CheatCounterActivity"
            android:screenOrientation="portrait" />
